# ====== Database (Local run) ======
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123

# ====== Redis ======
REDIS_PASSWORD=redis123

# ====== Security / JWT ======
INTERNAL_SHARED_SECRET=dev-internal-secret
JWT_ACCESS_SECRET=replace_with_a_long_random_string
JWT_REFRESH_SECRET=replace_with_another_long_random_string

# ====== CORS (สำหรับทดสอบบนเครื่อง) ======
CORS_ORIGINS=http://localhost,http://127.0.0.1

# ====== Frontend (Vite) — อิงพอร์ต service ภายใน compose ======
# สมมุติว่าคุณ expose ไว้แบบนี้:
# auth  : 6601, data: 6602, dim: 6603, ingest: 6604
VITE_AUTH_URL=http://localhost:6601
VITE_DATA_URL=http://localhost:6602
VITE_DIM_URL=http://localhost:6603
VITE_INGEST_URL=http://localhost:6604
VITE_DATA_API_KEY=dev-key

# ====== SMTP (จำเป็นต่อ auth-service โหมด production) ======
# เลือก 1 ใน 2 ทาง:
# (ก) ใช้ MailHog สำหรับทดสอบ (แนะนำช่วง dev)
EMAIL_FROM=noreply@sale-forecast.local
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=test
SMTP_PASS=test

# ====== (ถ้าไม่ได้ใช้ SSL/โดเมนจริง ตอนนี้ยังไม่ต้องตั้ง) ======
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ====== Logging/Monitoring ======
LOG_LEVEL=warn
ENABLE_METRICS=true

# ====== Backup (ยังไม่บังคับใช้ ถ้าไม่มีสคริปต์รองรับ) ======
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
